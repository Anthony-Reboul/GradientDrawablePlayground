<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="primary_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:minWidth">250dp</item>
        <item name="android:background">@drawable/rounded_rectangle_background</item>
        <item name="android:stateListAnimator">@animator/animator_raise_elevation</item>
    </style>

</resources>
